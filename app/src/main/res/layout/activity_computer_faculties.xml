<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".computer_faculties">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:layout_marginTop="24dp"
        android:background="#061778"
        android:gravity="center"
        android:text="Staff and Faculties"
        android:textColor="#F3EFEF"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="478dp"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView11"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/omsir" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#D51A1A"
                android:gravity="center"
                android:padding="15dp"
                android:text="Name of the Faculty : Varma Om Ramakisan Designation : Lecturer Degree Held : B.E. , M.Tech"
                android:textColor="#EAE5E5"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="match_parent"
                android:layout_height="192dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/godhemam" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#D80A0A"
                android:gravity="center"
                android:padding="15dp"
                android:text="Name of the Faculty : Mrs.Priyanka S.Ghode Designation :  :Lecturer Degree Held :B.E.,M.E. "
                android:textColor="#E4DEDE"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="match_parent"
                android:layout_height="164dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/rautmam" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="114dp"
                android:background="#DD0D0D"
                android:gravity="center"
                android:padding="15dp"
                android:text="Name of the Faculty : Sneha D. Raut Designation :  :Lecturer Degree Held :B.E.,M.E. "
                android:textColor="#F1EEEE"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="match_parent"
                android:layout_height="164dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/bodhesir" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#DD0D0D"
                android:gravity="center"
                android:padding="15dp"
                android:text="Name of the Faculty : Mr. Yogesh Uttamrao Bodhe Designation :  :Lecturer Degree Held :B.E.,M.Tech. "
                android:textColor="#F1EEEE"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>