<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    tools:context=".college_staff">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:layout_marginTop="24dp"
        android:background="#061778"
        android:gravity="center"
        android:text="Staff"
        android:textColor="#F3EFEF"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="478dp"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView11"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView29"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center"
                android:text="Principle"
                android:textSize="29sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="438dp"
                android:layout_height="475dp"
                android:padding="15dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/principal" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="356dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:background="#D51A1A"
                android:gravity="center"
                android:layoutDirection="inherit"
                android:padding="25dp"
                android:text="Dr. V. S. Bandal Principal G P Awasari"
                android:textColor="#EAE5E5"
                android:textSize="29sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="clip_horizontal|center"
                android:layout_margin="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:padding="5dp"
                android:paddingStart="5dp"
                android:text="Principle Desk"
                android:textSize="29sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="13dp"
                android:gravity="center|center_horizontal|fill_horizontal|top|center_vertical|fill_vertical"
                android:padding="35dp"
                android:text="@string/principle_desk"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>